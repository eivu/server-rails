<%# http://www.bootstrapzero.com/templates/96937 %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>
      <%= "#{yield :page_title} - " if content_for?(:page_title) %>Eivu
    </title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag    'eivu' %>
    <%= csrf_meta_tags %>
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<!--     <link href="css/bootstrap.min.css" rel="stylesheet"> -->
    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag "styles.css" %>
    <%#= stylesheet_link_tag "bootstrap.min.css" %>

    <%= javascript_include_tag "bootstrap.min.js" %>
  </head>
  <body>
    <div id="header" class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <i class="icon-reorder"></i>
        </button>
        <%= link_to "EIVU", root_path, :class => "navbar-brand" %>
      </div>
      <%= render :partial => "/layouts/top_internal_nav" %>
    </div>
    <div id="wrapper">
      <div id="sidebar-wrapper" class="col-md-1">
          <div id="sidebar">
            <ul class="nav list-group">
              <%= render :partial => "/#{(@left_nav_dir || "layouts")}/left_nav" %>
            </ul>
          </div>
        </div>
        <div id="main-wrapper" class="col-md-11 pull-right">
          <div id="main">
            <% %w(notice success error alert).each do |key| %>
              <% if flash[key.to_sym].present? %>
                <div id="flash">
                  <%= "#{key}: #{flash[key.to_sym]}" %>
                </div>
              <% end %>
            <% end %>

            <% if content_for?(:page_title) %>
              <div class="page-header">
                <h3><%= yield :page_title %></h3>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
    </div>
  </body>
</html>