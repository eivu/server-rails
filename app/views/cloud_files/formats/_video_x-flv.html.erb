<script src="https://cdnjs.cloudflare.com/ajax/libs/flv.js/1.4.0/flv.min.js"></script>
<video id="videoElement" playsinline controls></video>
<script>
  if (flvjs.isSupported()) {
    var videoElement = document.getElementById('videoElement');
    var flvPlayer = flvjs.createPlayer({
      type: 'flv',
      url: '<%= @cloud_file.url %>'
    });
    flvPlayer.attachMediaElement(videoElement);
    flvPlayer.load();
    flvPlayer.play();
  }
</script>